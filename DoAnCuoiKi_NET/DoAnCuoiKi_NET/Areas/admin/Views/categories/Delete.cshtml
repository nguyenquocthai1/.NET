@model DoAnCuoiKi_NET.Models.Category

@{
    ViewBag.Title = "Xóa Danh Mục";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div class="card-header py-3">
    <h4 class="m-0 font-weight-bold text-center" style="color: #ff0000">Xác nhận xóa Danh mục: @Model.name_cate</h4>
</div>

<div class="card shadow mb-4 border-bottom-danger border-left-danger">
    <dl class="card-body py-3">
        <dt style="margin-bottom: 10px; margin-top: 15px">
            Tên Menu:
            @if (Model.name_cate != null)
            {
                <span style="color: #ff006e">@Html.DisplayFor(model => model.name_cate) </span>
            }
            else
            {
                <span style="color: #ff006e">Unknown</span>
            }
        </dt>
        <dt style="margin-bottom:10px">
            Meta:
            @if (Model.meta != null)
            {
                <span style="color: #ff006e">@Html.DisplayFor(model => model.meta) </span>
            }
            else
            {
                <span style="color: #ff006e">Unknown</span>
            }
        </dt>

        <dt style="margin-bottom:10px">
            Link:
            @if (Model.link != null)
            {
                <span style="color: #0094ff">@Html.DisplayFor(model => model.link) </span>
            }
            else
            {
                <span style="color: #0094ff">Unknown</span>
            }
        </dt>

        <dt style="margin-bottom:10px">
            Hiển thị:
            <span style="color: #ff006e">@Html.DisplayFor(model => model.hide) </span>
        </dt>

        <dt style="margin-bottom:10px">
            Thứ tự:
            @if (Model.order != null)
            {
                <span style="color: #ff006e">@Html.DisplayFor(model => model.order) </span>
            }
            else
            {
                <span style="color: #ff006e">Unknown</span>
            }
        </dt>

        <dt style="margin-bottom:10px">
            Ngày tạo:
            @if (Model.datebegin != null)
            {
                <span style="color: #ff006e">@Html.DisplayFor(model => model.datebegin) </span>
            }
            else
            {
                <span style="color: #ff006e">Unknown</span>
            }
        </dt>
    </dl>
</div>

<div class="d-flex">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="btn btn-danger btn-icon-split mr-4">
                <span class="icon text-white-50">
                    <i class="fas fa-trash"></i>
                </span>
                <span>
                    <input type="submit" value="Xác nhận" class="btn btn-danger" />
                </span>
            </div>
        </div>
    }

    <a href="@Url.Action("Details", "categories", new { id = Model.id_cate })" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-info"></i>
        </span>
        <span class="text">Chi tiết</span>
    </a>
</div>
<div class="text-center">
    <a href="@Url.Action("Index", "categories")" class="btn btn-secondary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fa fa-reply-all"></i>
        </span>
        <span class="text">Về trang quản lý</span>
    </a>
</div>
